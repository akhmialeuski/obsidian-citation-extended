{
  "name": "obsidian-citation-extended",
  "version": "0.4.6",
  "description": "Automatically search and insert citations from a Zotero library",
  "main": "main.js",
  "scripts": {
    "dev": "rollup --config rollup.config.mjs -w",
    "build": "rollup --config rollup.config.mjs",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "jest",
    "doc": "typedoc src/types.ts",
    "release": "standard-version",
    "prepare": "husky"
  },
  "standard-version": {
    "bumpFiles": [
      "manifest.json"
    ]
  },
  "keywords": [],
  "author": "Anatol Khmialeuski",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-replace": "^5.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/jest": "^29.5.0",
    "@types/lodash": "^4.14.190",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "fast-check": "^3.0.0",
    "husky": "^9.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^30.2.0",
    "lodash": "^4.17.21",
    "obsidian": "^1.10.3",
    "prettier": "^3.0.0",
    "rollup": "^4.0.0",
    "rollup-plugin-web-worker-loader": "^1.6.1",
    "ts-jest": "^29.1.0",
    "tslib": "^2.6.0",
    "typedoc": "^0.28.14",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@retorquere/bibtex-parser": "^3.2.30",
    "chokidar": "^3.5.3",
    "handlebars": "^4.7.7",
    "minisearch": "^7.2.0",
    "open": "^8.4.2",
    "promise-worker": "^2.0.1",
    "zod": "^3.22.0"
  },
  "lint-staged": {
    "*.ts": "eslint --fix",
    "*.json": "prettier --write"
  },
  "jest": {
    "moduleNameMapper": {
      "src/(.*)": "<rootDir>/src/$1"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "d.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  }
}
